<div class="mt4">
    <h3>My purchases</h3>

    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name Item</th>
                <th scope="col">Description</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            {{#each purchases}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>
                    <a href="" class="btn btn-link">Change</a>
                    <a href="" class="btn btn-link">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
</table>

</div>